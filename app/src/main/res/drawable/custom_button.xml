<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- disabled -->
    <item android:state_enabled="false" >
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#454545"
                android:endColor="#454545"
                android:angle="-90"
                android:type="linear"
                />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- pressed -->
    <item android:state_pressed="true" android:state_enabled="true" >
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/white"
                android:endColor="@color/twitter_pure_blue"
                android:angle="-90"
                android:type="linear"
                />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/twitter_logo_blue"
                android:endColor="@color/dark_blue"
                android:angle="-90"
                android:type="linear"
                />
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="#dddddd"/>
        </shape>
    </item>

    <!-- default -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/light_black"
                android:endColor="@color/black"
                android:angle="-90"
                android:type="linear"
                />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>
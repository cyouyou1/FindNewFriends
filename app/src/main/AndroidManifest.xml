        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomDigitsTheme" >

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="cb83d3aaa3a146996f559dd6ff8f03ebd6c4ee6b" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.OptionChooserActivity"/>

        <activity android:name=".activity.SearchTimelineActivity"/>
        <activity android:name=".activity.SearchProfileActivity"/>
        <activity android:name=".activity.SearchTweetsActivity"/>
